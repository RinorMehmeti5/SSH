<h1>Edit</h1>
@model Konsultimet
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    Edito Lende
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Kid" hidden />
            <div class="border p-3 mt-4">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Ktitle" class="form-control border-0 shadow" />
                    <label asp-for="Ktitle" class="ms-2"></label>
                    <span asp-validation-for="Ktitle" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="KLid" class="form-control border-0 shadow" />
                    <label asp-for="KLid" class="ms-2"></label>
                    <span asp-validation-for="KLid" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea asp-for="Kpershkrimi" class="form-control border-0 shadow"></textarea>
                    <label asp-for="Kpershkrimi" class="ms-2"></label>
                    <span asp-validation-for="Kpershkrimi" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="KkohaEFillimit" class="form-control border-0 shadow" />
                    <label asp-for="KkohaEFillimit" class="ms-2"></label>
                    <span asp-validation-for="KkohaEFillimit" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="KkohaEMbarimit" class="form-control border-0 shadow" />
                    <label asp-for="KkohaEMbarimit" class="ms-2"></label>
                    <span asp-validation-for="KkohaEMbarimit" class="text-danger"></span>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Konsultimet" asp-action="Index" class="btn btn-outline-secondary border form-control">
                            Kthehu ne list
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}