@model List<Lendet>
@if (TempData["success"] != null)
{
        <h2>@TempData["success"]</h2>
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    Lista e Lendeve
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Lendet" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle-fill"></i>Krijo nje lende
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Emri i Lëndës
                    </th>
                    <th>
                        Përshkrimi i lëndës
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Lname</td>
                        <td>@obj.Ldescription</td>
                        <td>
                            <div class="w-75 btn btn-group" role="group">
                                <a asp-controller="Lendet" asp-action="Edit" asp-route-id="@obj.Lid" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Lendet" asp-action="Delete" asp-route-id="@obj.Lid" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>