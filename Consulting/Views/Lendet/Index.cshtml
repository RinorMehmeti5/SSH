@model List<Lendet>


<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Lista e lendeve
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Lendet" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i>Krijo nje lende
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Emri i Lëndës
                </th>
                <th>
                    Përshkrimi i lëndës
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Lname</td>
                    <td>@obj.Ldescription</td>
                    <td>
                        <div class="w-75 btn btn-group" role="group">
                            <a asp-controller="Lendet" asp-action="Edit" asp-route-lendetid="@obj.Lid" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-suqare"></i> Edit
                            </a>
                            <a asp-controller="Lendet" asp-action="Delete" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>